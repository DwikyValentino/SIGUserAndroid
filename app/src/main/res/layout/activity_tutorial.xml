<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara Penggunaan"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="1.1. Untuk mencari data yang anda inginkan cukup klik Menu Halaman Utama yang ada di tengah. anda cukup tekan tombol search data dan masukkan data apa yang ingin anda cari di aplikasi ini."
            />

        <TextView
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="1.2. Jika anda kesulitan atau tidak menemukan data yang anda ingin cari silahkan hubungi nomor atau email  dibawah ini : ."
            />

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinas Pertanian dan Ketahanan Pangan Kabupaten Brebes"
            android:textSize="21sp"
            android:gravity="left"
            />

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jl. Gajah Mada no. 3, Kotabaru, Brebes"
            android:textSize="21sp"
            android:gravity="left"
            />

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email : dpkp@brebeskab.go.id"
            android:textSize="21sp"
            android:gravity="left"
            />

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone : (0283) 671742"
            android:textSize="21sp"
            android:gravity="left"
            />

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website : dpkp.brebeskab.go.id"
            android:textSize="21sp"
            android:gravity="left"
            />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>